CFLAGS = -Og -ggdb
OBJS = $(SRCS:.cpp=.o) $(SRCS_C:.c=.o)
%.o : %.c
	$(CC) $(CFLAGS) $(INCLUDES) $(DEFINES) -fPIC -c $< -o $@

%.o : %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $(DEFINES) -fPIC -c $< -o $@
server.so : $(OBJS)
	$(CXX) $(OBJS) -o server.so -shared -Wl,--no-undefined -fPIC -lm -ldl

clean:
	$(RM) $(OBJS)
